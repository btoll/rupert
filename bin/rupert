#!/usr/bin/env node
/* eslint-disable no-console */
'use strict';

const argv = require('yargs')
    .usage('Usage: rupert [options]')

    .alias('f', 'file')
    .nargs('f', 1)
    .describe('f', 'The file to analyze')

    .describe('html', 'Creates an html document of the tree')
    .boolean('html')

    .alias('v', 'verbose')
    .boolean('v')
    .describe('v', 'Dumps `it` blocks')

    .help('h')
    .alias('h', 'help')
    .argv,

    // Default to logging to stdout.
    printer = require(`../src/lib/printer/${!argv.html ? 'log' : 'html'}`),
    makeTree = require('../src/index'),
    file = argv.file,
    log = console.log;

if (!file) {
    const stdin = process.stdin;
    let buf = '';

    stdin.setEncoding('utf8');

    stdin.on('readable', () => {
        const chunk = stdin.read();

        if (chunk !== null) {
            buf += chunk;
        }
    });

    stdin.on('end', () => {
        makeTree(buf, printer, true)
        .then(log)
        .catch(log);
    });
} else {
    makeTree(file, printer, argv.verbose, false)
    .then(log)
    .catch(log);
}

